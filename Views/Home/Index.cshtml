@model Registro_de_Usuario.Models.UserLogin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="card card-container">
        <h2 class="titleLogin">Inciar sesion</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger"})
        @using (Html.BeginForm("Usuarios", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
            <div>
                @Html.TextBoxFor(dl => dl.Email, new { @class = "form-control", @placeholder = "Email" })
                @Html.ValidationMessageFor(dl => dl.Email, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.PasswordFor(dl => dl.Password, new { @class = "form-control", @placeholder = "Password" })
                @Html.ValidationMessageFor(dl => dl.Password, "", new { @class = "text-danger" })
            </div><br/>
            <input type="submit" value="Entrar" class="btn btn-signin" />

        }<br />
        @Html.ActionLink("Sign in", "SignIn", "Home")
        @{ if(!string.IsNullOrEmpty(ViewBag.Message))
            {
                <script type="text/javascript">
                    alert('El mail o Password incorrectos');
                    document.location = "Index";
                </script>
            }

        }
    </div>
</div>

